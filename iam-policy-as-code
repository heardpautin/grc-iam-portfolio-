# main.tf - IAM Conditional Access Policy as Code

# 1. Define the cloud provider (Azure)
terraform {
  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "~> 3.0"
    }
  }
}

# 2. Define the policy resource (currently commented out)
/*
